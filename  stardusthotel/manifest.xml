<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">

  <Name> ID del mensaje </Name>
  <Description> Este gadget servirá para probar el proceso de creación de un contextual gadget </Description>

  <!-- ======== EXTRACTOR ======== -->
  <Extension id = "extractors" type = "contextExtractor" >
    <Name> Gadget de prueba </Name>
    <Url> google.com:MessageIDExtractor </Url>
    <Triggers ref = "imprimir" />
    <Scope ref = "senderScope" />
    <Container name = "mail" />
  </Extension>
  
  <!-- ======== GADGET ======== -->
  <Extension id = "imprimir" type = "gadget" >
    <Name> nombre </Name>
    <Url> http://hosting.gmodules.com/ig/gadgets/file/100207598249870686953/message.xml </Url>
    <Container name = "mail" />
  </Extension>
  
  <!-- ======== SCOPE ======== -->
  <Scope id = "senderScope" >
    <Url> tag:google.com,2010:auth/contextual/extractor/MESSAGE_ID </Url>
    <Reason> Se desea obtener el Message ID </Reason>
  </Scope>
  
</ApplicationManifest>