@model Stardust.Models.Horario


@{
    ViewBag.Title = "Crear Horario";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>

@if ( !String.IsNullOrEmpty(ViewBag.error)) { 
    <div class="nNote nWarning hideit">
        <p><strong>AVISO: </strong>@ViewBag.error</p>
    </div>
}

@using (Html.BeginForm("CrearHorario", "Empleado", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title" ><h6>Crear Nuevo Horario</h6></div>

