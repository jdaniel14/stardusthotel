                @Html.LabelFor( model => model.nombreEmpleado )
                <div class = "formRight" > @Html.DropDownListFor( model => model.nombreEmpleado , new SelectList( ViewBag.empleados , "ID" , "nombres" ) , "Elija un usuario... " ) </div>
                <div class = "clear" ></div>
            </div>*@

            <div class = "formRow" style= " display:none">
                @Html.LabelFor( model => model.idEmpleado )
                 
                <div class = "formRight" > @Html.TextBoxFor(model => model.idEmpleado) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.fechaInicioHorario)
                <div class = "formRight" > @Html.TextBoxFor(model => model.fechaInicioHorario, new { @class = "datepicker" }) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.fechaFinHorario )
                <div class = "formRight" > @Html.TextBoxFor(model => model.fechaFinHorario, new { @class = "datepicker" }) </div>
