@model Stardust.Models.EventoBean

@{
    ViewBag.Title = "RegistrarEvento";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.mousewheel.js")" type="text/javascript"></script>



@ViewBag.lol

@using (Html.BeginForm("RegistrarEvento", "Evento", FormMethod.Post, new { @class = "form", id = "validate" }))
{
   @Html.ValidationSummary(false)
    

    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Registrar Evento</h6>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.nombre)<span class="req">*</span>
                <div class="formRight">@Html.TextBoxFor(model => model.nombre, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "60", placeholder = "Maximo 60 caracteres aqui" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.descripcion)<span class="req">*</span>
                <div class="formRight"> @Html.TextAreaFor(model => model.descripcion, new { @class = "validate[custom[onlyLetterSp]]", name = "lettersValid", maxlength = "100"}) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.fechaIni)<span class="req">*</span>                     
                <div class="formRight"> @Html.TextBoxFor(model => model.fechaIni, new { @class="datepicker", id="fechaini"}) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">
                <label>Hora Inicial</label>
               <div class = "formRight" >
               
                    <input type = "text" id = "horaIni" name = "horaIni" class="timepicker"  size="10"/><span class="f11">Use mouse y teclado</span>                                                 </div>
                <div class = "clear" ></div>                
            </div>         

             <div class="formRow">@Html.LabelFor(model => model.fechaFin)<span class="req">*</span>                     
                <div class="formRight"> @Html.TextBoxFor(model => model.fechaFin, new { @class="datepicker", id="fechafin"}) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">
                <label>Hora Final</label>
               <div class = "formRight" >
                    <input type = "text" id = "horaFin" name = "horaFin" class="timepicker"  size="10"/><span class="f11">Use mouse y teclado</span>               </div>
                <div class = "clear" ></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.nroParticipantes)<span class="req">*</span>
                <div class="formRight"> @Html.TextBoxFor(model => model.nroParticipantes, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "8" }) </div>
                <div class="clear"></div>
            </div>
                        
        </div>
    </fieldset>

        <p>
        <input type="submit" value="Crear" class = "redB" />        
        @Html.ActionLink("Regresar", "../Home/Index")
    </p>
}