@model Stardust.Models.ProveedorBean

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Proveedores</h2>

<p>
    Lista general de los proveedores del hotel
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
   
<form action = "" class = "form" >

   <fieldset>

        <legend>Proveedor</legend>
        @Html.HiddenFor(model => model.idProveedor)
    
        <div class="formRow">
            <label>Razon Social</label>
            <div class="formRight">
                @Html.EditorFor(model => model.razonSocial)
            </div>
            <div class = "clear"></div>
        </div>
                
        <div class="formRow">
            <label>RUC</label>
            <div class="formRight">
                @Html.EditorFor(model => model.ruc)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Direccion</label>
            <div class="formRight">
                @Html.EditorFor(model => model.direccion)
            </div>
            <div class = "clear"></div>
        </div>
        
        <div class="formRow">
            <label>Telefono</label>
            <div class="formRight">
                @Html.EditorFor(model => model.telefono)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Web</label>
            <div class="formRight">
                @Html.EditorFor(model => model.web)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Contacto</label>
            <div class="formRight">
                @Html.EditorFor(model => model.contacto)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Cargo del Contacto</label>
            <div class="formRight">
                @Html.EditorFor(model => model.cargoContacto)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>E-mail del Contacto</label>
            <div class="formRight">
                @Html.EditorFor(model => model.emailContacto)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Observaciones</label>
            <div class="formRight">
                @Html.EditorFor(model => model.observaciones)
            </div>
            <div class = "clear"></div>
        </div>

        <p>
            <input type="submit" value="Guardar cambios" />
        </p>

    </fieldset>

</form>
}

