@model Stardust.Models.OrdenCompras          
        
<h2>Pago a Proveedor al Contado</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>



 @using (Html.BeginForm("PagoContado", "Proveedor", FormMethod.Post, new { @class = "form", id = "validate"}))
{
    @Html.ValidationSummary(true);
    <div class="title"><h6>Listado de Orden de Compra</h6> </div>
     <p></p><p></p>
    
        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
            <td>Producto</td>
           <td>Cantidad</td>
           <td>Precio</td>
          
           
        </tr>
    </thead>

    <tbody>

    @Html.HiddenFor(model => model.id) 
  
    @for (int i = 0; (i < Model.listaOCDetalle.Count); i++)
    {
             <tr>       
               
                <td> @Html.TextBoxFor(model => model.listaOCDetalle[i].nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listaOCDetalle[i].cantidad, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listaOCDetalle[i].precio1, new { @readonly = "readonly" }) </td>
                @Html.HiddenFor(model => model.listaOCDetalle[i].precio)
            </tr>

    
    }

    @Html.HiddenFor(model => model.estado)
         
    <tr>
        <td></td>
        <td>Total Sin IGV</td>
        <td>@Html.TextBoxFor(model => model.subtotal1, new { @readonly = "readonly" })</td>
        @Html.HiddenFor(model => model.subtotal)
    </tr> 

    <tr>
        <td></td>
        <td>IGV</td>
        <td>@Html.TextBoxFor(model => model.igv1, new { @readonly = "readonly" })</td>
        @Html.HiddenFor(model => model.igv)
    </tr>
    
    <tr>
        <td></td>
        <td>Total</td>
        <td>@Html.TextBoxFor(model => model.total1, new { @readonly = "readonly" })</td>
        @Html.HiddenFor(model => model.total)
    </tr>

    </tbody>

    </table>
     
     <fieldset>

     <div class="formRow">
                @Html.LabelFor(model => model.paga)
                @*<div class = "formRight" >@Html.TextBoxFor(model => model.paga, new { @readonly = "readonly" })</div>*@                
                <div class = "formRight" >@Html.TextBoxFor(model => model.paga1, new { @readonly = "readonly" })</div>
                @Html.HiddenFor(model => model.paga)
                @*<div class = "formRight">@ViewBag.error2</div>*@
                <div class = "clear" ></div>
    </div>

    <div class="formRow">
                @Html.LabelFor(model => model.pagar)
                <div class = "formRight" >@Html.TextBoxFor(model => model.pagar1, new { @readonly = "readonly" })</div>
                @Html.HiddenFor(model => model.pagar)                
                <div class = "clear" ></div>
    </div>

    <div class="formRow">
                @Html.LabelFor(model => model.pagado)<span class="req">*</span>
                <div class = "formRight" >@Html.TextBoxFor(model => model.pagado1, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "6", placeholder = "Solo numeros" })</div>
                <div class = "formRight">@ViewBag.error</div>
                <div class = "clear" ></div>
    </div>    

    </fieldset>
    <p></p><p></p><p></p><p></p>
    <p>
        <input type="submit" value="Contado" class = "redB"/>        
        @Html.ActionLink("Regresar", "PagoProveedor", "Proveedor")
    </p>
}