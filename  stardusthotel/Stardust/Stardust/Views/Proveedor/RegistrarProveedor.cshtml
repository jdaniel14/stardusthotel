@model Stardust.Models.ProveedorBean


@{
    ViewBag.Title = "RegistrarProveedor";
}

<h2>RegistrarProveedor</h2>


<p>
    Llene el siguiente formulario para la creación de un nuevo proveedor
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())

{

    <form action = "" class = "form" >
        <fieldset>

            <div class="editor-label">
                <label>Razon Social</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.razonSocial)                              
            </div>

            <div class="editor-label">
                <label>RUC</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ruc)                              
            </div>

            <div class="editor-label">
                <label>Dirección</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.direccion)                              
            </div>

            <div class="editor-label">
                <label>Teléfono</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.telefono)                              
            </div>

            <div class="editor-label">
                <label>Web</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.web)                              
            </div>

            <div class="editor-label">
                <label>Contacto</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.contacto)                              
            </div>

            <div class="editor-label">
                <label>Cargo del Contacto</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.cargoContacto)                              
            </div>

            <div class="editor-label">
                <label>emailContacto</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.emailContacto)                              
            </div>

            <div class="editor-label">
                <label>Observaciones</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.observaciones)                              
            </div>

            <p>
                <input type="submit" value="Registrar Proveedor" />
            </p>

        </fieldset>
    </form>
}

