@model List<Stardust.Models.OrdenCompras>
        
<h2>Listado de Orden de Compra</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>



 @using (Html.BeginForm("ListarOC", "Proveedor", FormMethod.Post, new { @class = "form" }))
{

    <div class="title"><h6>Orden de Compra del Proveedor</h6> </div>
     <p></p><p></p>
    
        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
            <td>Estado</td>
           <td>Fecha</td>
           <td>Precio</td>
           
        </tr>
    </thead>

    <tbody>

  
    @for (int i = 0; (i < Model.Count); i++)
    {
    @Html.HiddenFor(model => model[i].id) 
             <tr>       
               
                <td> @Html.TextBoxFor(model => model[i].estado, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model[i].fecha, new { @readonly = "readonly" })  </td>
                <td> @Html.TextBoxFor(model => model[i].precio, new { @readonly = "readonly" })   </td>
     </tr>

    
    }
           

    
    </tbody>

    </table>
    <p></p><p></p><p></p><p></p>
    <p>
        <input type="submit" value="Pagar" class = "redB" />
        @Html.ActionLink("Regresar", "Buscar", "Proveedor")
    </p>
    }
