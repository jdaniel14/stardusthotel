@model Stardust.Models.VariablesBean

@{
    ViewBag.Title = "Modificar variables";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Variables", FormMethod.Post, new { @class = "form", id = "validate" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title" ><h6> Modificar variables del sistema </h6></div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.horasEsperaConfirmarReserva)<span class="req">*</span>
                <div class = "formRight" > @Html.TextBoxFor(model => model.horasEsperaConfirmarReserva, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "2" }) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.porcAdelanto)<span class="req">*</span>
                <div class = "formRight" > @Html.TextBoxFor(model => model.porcAdelanto, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "3" }) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.diasEsperarSinRetener)<span class="req">*</span>
                <div class = "formRight" > @Html.TextBoxFor(model => model.diasEsperarSinRetener, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "3"}) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.porcRetencion)<span class="req">*</span>
                <div class = "formRight" > @Html.TextBoxFor(model => model.porcRetencion, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "3" }) </div>
                <div class = "clear" ></div>
            </div>
        </div>
        <p>
            <input class = "redB" type="submit" value="Guardar" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Regresar", "Index")
</div>