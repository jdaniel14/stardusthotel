@model Stardust.Models.VariablesBean

@{
    ViewBag.Title = "Modificar variables";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@*<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>
*@


@using (Html.BeginForm("Edit", "Variables", FormMethod.Post, new { @class = "form", id = "validate" }))
{
    <fieldset>
        <div class = "widget" >
            <div class = "title" ><h6>@ViewBag.Title</h6></div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.horasEsperaConfirmarReserva)
                <div class = "formRight" > 
                    @*@Html.TextBoxFor(model => model.horasEsperaConfirmarReserva, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid"})*@
                    @Html.TextBoxFor(model => model.horasEsperaConfirmarReserva)
                    @Html.ValidationMessageFor(model => model.horasEsperaConfirmarReserva)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.porcAdelanto)
                <div class = "formRight" > 
                    @*@Html.TextBoxFor(model => model.porcAdelanto, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "3" }) </div>*@
                    @Html.TextBoxFor(model => model.porcAdelanto)
                    @Html.ValidationMessageFor(model => model.porcAdelanto)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.diasEsperarSinRetener)
                <div class = "formRight" > 
                    @*@Html.TextBoxFor(model => model.diasEsperarSinRetener, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "1"}) *@
                    @Html.TextBoxFor(model => model.diasEsperarSinRetener)
                    @Html.ValidationMessageFor(model => model.diasEsperarSinRetener)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.porcRetencion)
                <div class = "formRight" > 
                    @*@Html.TextBoxFor(model => model.porcRetencion, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "3" }) *@
                    @Html.TextBoxFor(model => model.porcRetencion) 
                    @Html.ValidationMessageFor(model => model.porcRetencion)
                </div>
                <div class = "clear" ></div>
            </div>
        </div>
        <p>
            <input class = "redB" type="submit" value="Guardar" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Regresar", "Index")
</div>