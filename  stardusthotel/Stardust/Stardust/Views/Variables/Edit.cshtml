@model Stardust.Models.VariablesBean

@{
    ViewBag.Title = "Modificar variables";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Variables", FormMethod.Post, new { @class = "form" } ))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title" ><h6> Modificar variables del sistema </h6></div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.horasEsperaConfirmarReserva)
                <div class = "formRight" > @Html.TextBoxFor( model => model.horasEsperaConfirmarReserva) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.porcAdelanto)
                <div class = "formRight" > @Html.TextBoxFor( model => model.porcAdelanto) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.diasEsperarSinRetener)
                <div class = "formRight" > @Html.TextBoxFor( model => model.diasEsperarSinRetener) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.porcRetencion)
                <div class = "formRight" > @Html.TextBoxFor( model => model.porcRetencion) </div>
                <div class = "clear" ></div>
            </div>
        </div>
        <p>
            <input class = "redB" type="submit" value="Guardar" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Regresar", "Index")
</div>