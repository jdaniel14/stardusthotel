@model Stardust.Models.OrdenCompraBean

<h2>Buscar Orden de Compra </h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>


@using (Html.BeginForm("Buscar2", "OrdenCompra", FormMethod.Post, new { @class = "form", id = "validate" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Buscar Orden De Compra</h6></div>

            <div class="formRow">
                <label>Proveedor</label>
                <div class = "formRight" ><input type = "text" id = "nombre"  class="validate[custom[onlyLetterSp]]" ,name="lettersValid", maxlength = "50" /></div>
                <div class = "clear" ></div>
            </div>
            <div class="formRow">
                <label>Fecha Inicio</label>
                <div class = "formRight" >
                    <input type = "text" id = "fecha1" name = "fecha1" class="datepicker" /></div>
                <div class = "clear" ></div>
            </div>
            <div class="formRow">
                <label>Fecha Fin</label>
                <div class = "formRight" >
                    <input type = "text" id = "fecha2" name = "fecha2" class="datepicker"/></div>
                <div class = "clear" ></div>
            </div>

        </div>
    </fieldset>
    <p>
        <input type="submit" value="Buscar" class = "redB" />
        @Html.ActionLink("Regresar", "Buscar")
    </p>
}
