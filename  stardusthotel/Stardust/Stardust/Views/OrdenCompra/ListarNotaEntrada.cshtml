@model Stardust.Models.OrdenCompraBean

@{
    ViewBag.Title = "Listado de notas de Entrada";
}

<h2>Nota de Entrada</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

 
 @using (Html.BeginForm("", "OrdenCompra", FormMethod.Post, new { @class = "form" }))
 { 
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Notas de Entrada</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombreproveedor)
                <div class=" formRight">  @Html.DisplayFor(model => model.nombreproveedor) @Html.HiddenFor(model => model.nombreproveedor) </div>
                <div class="clear"></div>
            </div>
             <div class="formRow"> @Html.LabelFor(model => model.nombrehotel)
                <div class=" formRight">  @Html.DisplayFor(model => model.nombrehotel) @Html.HiddenFor(model => model.nombrehotel) </div>
                <div class="clear"></div>
            </div>
            
            <div class="formRow"> @Html.LabelFor(model => model.fecha)
                <div class=" formRight">  @Html.DisplayFor(model => model.fecha) @Html.HiddenFor(model => model.fecha)  </div>
                <div class="clear"></div>
            </div>
            
        </div>
    </fieldset>
    
    <p>
    <a href="@Url.Action("RegistrarNotaEntrada", new { id = Model.idOrdenCompra })"><img src="../../Content/images/icons/color/plus.png", alt="Create" />Registrar Nota entrada</a>
    </p>
    <p></p><p></p><p></p><p></p>

    <div class="title"><h6>Notas de entrada que tiene la Orden de Compra</h6> </div>
     <p></p><p></p>
    
        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
            <td>IdNotaentrada</td>
            <td>Fecha Emitida</td>
            <td>Opciones</td>
        </tr>
    </thead>

    <tbody>
    

        @for (int i = 0; (i < Model.notasentrada.Count); i++)
        {
    <tr>       
               
                <td> @Html.DisplayFor(model => model.notasentrada[i].idguiaRemision)  @Html.HiddenFor(model => model.notasentrada[i].idguiaRemision)</td>
                <td> @Html.DisplayFor(model => model.notasentrada[i].fechaemitida) @Html.HiddenFor(model => model.notasentrada[i].fechaemitida)</td>
                <td><a href="@Url.Action("DetallenotaEntrada", new { id = Model.notasentrada[i].idguiaRemision, id2=Model.idOrdenCompra })"><img src="../../Content/images/icons/color/pencil.png", alt="Edit" />Detalle </a></td>
               
     </tr>

    
        }

           
    </tbody>

    </table>
    <p></p><p></p><p></p><p></p>
    <p>
        @Html.ActionLink("Regresar", "Buscar", "OrdenCompra")
    </p>

 }