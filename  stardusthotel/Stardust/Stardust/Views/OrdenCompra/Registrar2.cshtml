@model Stardust.Models.OrdenProducto

<h2>Orden de Compra</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

 @using (Html.BeginForm("RegistrarOC", "OrdenCompra", FormMethod.Post, new { @class = "form", id = "validate" }))
{   
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Proveedor</h6>
                @Html.HiddenFor(model => model.id) 
                
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.proveedor)
                <div class=" formRight">  @Html.DisplayFor(model => model.proveedor, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow"> @Html.LabelFor(model =>model.nombrehotel)
                <div class=" formRight">  @Html.DisplayFor(model => model.nombrehotel, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
        </div>
    </fieldset>
    

    <p></p><p></p><p></p><p></p>

    <div class="title"><h6>Productos que tiene el Proveedor</h6> </div>
     <p></p><p></p>
    
        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
            <td>Producto</td>
            <td>Precio</td>
           <td>Stock Actual</td>
           <td>Stock Minimo</td>
           <td>Stock Maximo</td>
           <td>Cantidad</td>
           
        </tr>
    </thead>

    <tbody>

  
    @for (int i = 0; (i < Model.listaProducto.Count); i++)
    {
    @Html.HiddenFor(model => model.listaProducto[i].id) 
             <tr>       
                
                <td> @Html.DisplayFor(model => model.listaProducto[i].Nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listaProducto[i].precio, new { @readonly = "readonly" }) </td>
                <td> @Html.DisplayFor(model => model.listaProducto[i].stockActual, new { @readonly = "readonly" })   </td>
                <td> @Html.DisplayFor(model => model.listaProducto[i].stockMinimo, new { @readonly = "readonly" })   </td>
                <td> @Html.DisplayFor(model => model.listaProducto[i].stockMaximo, new { @readonly = "readonly" })   </td>
                <td> @Html.TextBoxFor(model => model.listaProducto[i].cantidad, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "3", placeholder = "Solo numeros" })   </td>
     </tr>

        
    
    }
           
    </tbody>

    </table>

     
    <p></p><p></p><p></p><p></p>
    <p>
        <input type="submit" value="Crear" class = "redB" /> |
        @Html.ActionLink("Regresar", "Index","OrdenCompra")      
    </p>
    
    }
