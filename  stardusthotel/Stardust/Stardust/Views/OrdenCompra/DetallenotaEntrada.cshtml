@model Stardust.Models.NotaEntradaBean

@{
    ViewBag.Title = "Detalle Nota Entrada";
}

<h2>Detalle de La Orden Compra</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

    
@using (Html.BeginForm("ListarNotaEntrada", "OrdenCompra", FormMethod.Post, new { @class = "form" }))
{
   @Html.ValidationSummary(false)
    
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Detalle de La Orden Compra</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombreproveedor)<span class="req">*</span>
                <div class=" formRight"> @Html.DisplayFor(model => model.nombreproveedor)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.fechaemitida)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.fechaemitida) </div>
                <div class="clear"></div>
            </div>
            
        </div>
    </fieldset>
    
    
    <div class="widget">
          <div class="title"><img src="../../Content/images/icons/dark/frames.png" alt="" class="titleIcon" /><h6>Lista de Productos</h6></div>
            <table cellpadding="0" cellspacing="0" width="100%" class="sTable">
                <thead>                    <tr>                        <td>Producto</td>                        <td>Cantidad Recibida</td>                    </tr>                </thead>
                <tbody>
                        @for (int i = 0; i < Model.detallenotaentrada.Count; i++)
                        {
                    <tr>       
               
                        <td> @Html.DisplayFor(model => model.detallenotaentrada[i].nombre) @Html.HiddenFor(model => model.detallenotaentrada[i].nombre) </td>
                        <td> @Html.DisplayFor(model => model.detallenotaentrada[i].cantidadrecibida) @Html.HiddenFor(model => model.detallenotaentrada[i].nombre) </td>

                      
                    </tr>       
                        }


                </tbody>
            </table>
      </div>
    
    <p>
       
        @Html.ActionLink("Regresar", "ListarNotaEntrada/" + Model.idordencompra, "OrdenCompra")
    </p>
    
}
       