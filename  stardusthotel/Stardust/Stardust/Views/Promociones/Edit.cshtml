@model Stardust.Models.PromocionBean

<h2>Modificar Promocion</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm( "Edit" , "Promociones" , FormMethod.Post , new { @class = "form" } ) ){
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Modificar Promocion</h6></div>

                <div class=" formRight"> @Html.HiddenFor(model => model.idPromocion)  </div>

            <div class="formRow"> @Html.LabelFor(model => model.descripcion)<span class="req">*</span>
                <div class=" formRight"> @Html.EditorFor(model => model.descripcion)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.descuento)<span class="req">*</span>
                <div class="formRight"> @Html.DropDownListFor(model => model.tipo,Model.tipoList) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.razon)<span class="req">*</span>
                <div class="formRight"> @Html.EditorFor(model => model.razon) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.porcDescontar)<span class="req">*</span>
                <div class="formRight"> @Html.EditorFor(model => model.porcDescontar) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.hotel)<span class="req">*</span>
                <div class="formRight"> @Html.DropDownListFor(model => model.ID,Model.hotelList) </div>
                <div class="clear"></div>
            </div> 
            
        </div>
    </fieldset>
    <p>
        <input type="submit" value="Guardar" class = "redB" />
    </p>
}

<div>
    @Html.ActionLink("Regresar", "../Home/Index")
</div>
