@model Stardust.Models.PromocionBean

<h2>Registrar Promoción de Pago Adelantado</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("RegistrarAdelanto", "Promociones", FormMethod.Post, new { @class = "form", id = "validate" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
            <div class="widget">
            <div class="title">
                <h6>Registrar Promoción</h6>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion)<span class="req">*</span>
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.descripcion, new { maxlength = "100", placeholder = "Máximo 100 caracteres" })
                    @Html.ValidationMessageFor(model => model.descripcion) 
                </div>
                <div class = "clear" ></div>
            </div>
            
            <div class="formRow">
                @Html.LabelFor(model => model.adelanto)<span class="req">*</span>
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.adelanto2, new { @class = "maskPct", placeholder = "Ejemplo: 15%" })
                    @Html.ValidationMessageFor(model => model.adelanto2)
                </div>
                <div class = "clear" ></div>
            </div>  
            
            <div class="formRow">
                @Html.LabelFor(model => model.porcDescontar)<span class="req">*</span>
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.porcDescontar2, new { @class = "maskPct", placeholder = "Ejemplo: 15%" })
                    @Html.ValidationMessageFor(model => model.porcDescontar2)
                </div>
                <div class = "clear" ></div>
            </div>
            
            <div class="formRow">
                @Html.LabelFor(model => model.idhotel)<span class="req">*</span>
                <div class = "formRight" >
                <div class = "selector">@Html.DropDownListFor(model => model.idhotel,new SelectList(ViewBag.Hotel,"ID","nombre"))</div>
                <div class = "clear" ></div>
            </div>         
            </div>
            
    </fieldset>
            <p></p> <p></p> <p></p>
    <div>
           <input type="submit" value="Crear" class = "redB" />
           @Html.ActionLink("Regresar", "Registrar")
    </div>
}


