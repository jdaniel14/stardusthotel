@model Stardust.Models.PromocionBean

@{
    ViewBag.Title = "Registrar Promocion";
}

<h2>RegistrarAdelanto</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("RegistrarAdelanto", "Promociones", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
            <div class="widget">
            <div class="title">
                <h6>Registrar Promocion</h6>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion)
                <div class = "formRight" >@Html.TextBoxFor(model => model.descripcion)</div>
                 <div class = "clear" ></div>
            </div>
            
            <div class="formRow">
                @Html.LabelFor(model => model.descuento)
                <div class = "formRight" >@Html.TextBoxFor(model => model.adelanto)</div>
                <div class = "clear" ></div>
            </div>  
            
            <div class="formRow">
                @Html.LabelFor(model => model.porcDescontar)
                <div class = "formRight" >@Html.TextBoxFor(model => model.porcDescontar)</div>
                <div class = "clear" ></div>
            </div>
            
            <div class="formRow">
                @Html.LabelFor(model => model.idhotel)
                <div class = "formRight" >@Html.DropDownListFor(model => model.ID, Model.hotelList)</div>
                <div class = "clear" ></div>
            </div>         
            
            </div>
    </fieldset>
            <p></p> <p></p> <p></p>
    <div>
           <input type="submit" value="Registrar" class = "redB" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
