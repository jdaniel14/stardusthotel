@model Stardust.Models.PromocionBean

<h2>Registrar Promoción Numero de Días de Reserva </h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

@using (Html.BeginForm("RegistrarDia", "Promociones", FormMethod.Post, new { @class = "form", id = "validate" }))
{
    @Html.ValidationSummary(false)

    <fieldset>
            <div class="widget">
            <div class="title">
                <h6>Registrar Promocion</h6>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion)<span class="req">*</span>
                <div class = "formRight" >@Html.TextBoxFor(model => model.descripcion, new { @class = "validate[required]", maxlength = "100", placeholder = "Maximo 100 caracteres" })</div>
                 <div class = "clear" ></div>
            </div>
            
            <div class="formRow">                
                @Html.LabelFor(model => model.dias)<span class="req">*</span>                
                <div class = "formRight"> @Html.TextBoxFor(model => model.dias, new {@class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "2", placeholder = "Solo numeros" }) </div>
                <div class = "clear" ></div>
            </div>  
            
            <div class="formRow">                
                @Html.LabelFor(model => model.porcDescontar)<span class="req">*</span>                
                <div class = "formRight"> @Html.TextBoxFor(model => model.porcDescontar, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "2", placeholder = "Solo numeros" }) </div>
                <div class = "clear" ></div>
            </div>
            
            <div class="formRow">
                @Html.LabelFor(model => model.idhotel)<span class="req">*</span>
                <div class = "formRight" >@Html.DropDownListFor(model => model.ID, Model.hotelList)</div>
                <div class = "clear" ></div>
            </div>         
            
            </div>
    </fieldset>
            <p></p> <p></p> <p></p>
    <div>
           <input type="submit" value="Crear" class = "redB" />
           @Html.ActionLink("Regresar", "Registrar")
    </div>
}
