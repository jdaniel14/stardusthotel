@model Stardust.Models.PromocionBean

<h2>Esta seguro que quiere borrar la Promocion?</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

    
@using (Html.BeginForm("Delete", "Promociones", FormMethod.Post, new { @class = "form" }))
{
   @Html.ValidationSummary(false)
    
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Detalle de la Promocion</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.descripcion)<span class="req">*</span>
                <div class=" formRight"> @Html.DisplayFor(model => model.descripcion)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.descuento)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.descuento) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.razon)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.razon) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.porcDescontar)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.porcDescontar) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.hotel)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.hotel) </div>
                <div class="clear"></div>
            </div>         
            
        </div>
    </fieldset>
        <p>
        <input type="submit" value="Borrar" class = "redB"/> | 
        @Html.ActionLink("Regresar", "Buscar")
    </p>
    
}
