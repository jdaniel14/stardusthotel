@model Stardust.Models.OrdenCompras
        
<h2>Listado de Orden de Compra</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>



 @using (Html.BeginForm("ListarOC", "Proveedor", FormMethod.Post, new { @class = "form" }))
{
    <div class="title"><h6>Orden de Compra del Proveedor</h6> </div>
     <p></p><p></p>
     
     <fieldset>
     @Html.DisplayFor(model => model.id)
     <div class = "formRow">
         <label>Nombre Proveedor</label>
         <div class = "formRight" >@Html.DisplayFor(model => model.nombre)</div>
         <div class = "clear" ></div>
     </div>


     </fieldset>
    
        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
           <td>Estado</td>
           <td>Fecha</td>
           <td>Precio</td>
           <td></td>
           
        </tr>
    </thead>

    <tbody>

  
    @for (int i = 0; (i < Model.listaOC.Count); i++)
    {
             <tr>       
                @Html.HiddenFor(model => model.id)
                <td> @Html.TextBoxFor(model => model.listaOC[i].estado, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listaOC[i].fecha, new { @readonly = "readonly" })  </td>
                <td> @Html.TextBoxFor(model => model.listaOC[i].precio, new { @readonly = "readonly" })   </td>

            </tr>    
    }
           
    </tbody>

    </table>
    <p></p><p></p><p></p><p></p>
    <p>
        @Html.ActionLink("Imprimir", "Nada", new { id = Model.id}, new { target = "_blank" }) |
        @Html.ActionLink("Regresar", "Proveedor", "Reporte")
    </p>
    }

