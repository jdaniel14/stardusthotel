@model Stardust.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="loginWrapper">
    <div class="loginLogo"><img src="@Url.Content("~/Content/images/loginLogo.png")" alt="" /></div>

    <div class="widget">
        <div class="title"><img src="@Url.Content("~/Content/images/icons/dark/files.png")" alt="" class="titleIcon" />
            <h6>Panel de Login</h6>
        </div>
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form"}))
        {
            <fieldset>
                <div class="formRow">
                    @Html.LabelFor(m => m.Usuario)
                    <div class="loginInput">
                        @Html.TextBoxFor(m => m.Usuario)
                        @Html.ValidationMessageFor(m => m.Usuario)
                    </div>
                    <div class="clear"></div>
                </div>
                
                <div class="formRow">
                    @Html.LabelFor(m => m.Contrasenia)
                    <div class="loginInput">
                        @Html.PasswordFor(m => m.Contrasenia)
                        @Html.ValidationMessageFor(m => m.Contrasenia)
                    </div>
                    <div class="clear"></div>
                </div>
    
                <div class="loginControl">

                    <div class="rememberMe">
                        <input type="checkbox" id="remMe" name="remMe" />
                        <label for="remMe">Remember me</label>
                    </div>
                    <input type="submit" value="Log in" class="dredB logMeIn" />
                    <div class="clear"></div>
                </div>
                @*@Html.ValidationSummary()*@
            </fieldset>
        }
    </div>

</div>