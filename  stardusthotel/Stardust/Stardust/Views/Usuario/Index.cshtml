@model IEnumerable<Stardust.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear usuario", "Create")
</p>
<table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable">
    <thead>
        <tr>
            <td>Nombre</td>
            <td>Ap. Paterno</td>
            <td>Ap. Materno</td>
            <td></td>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombres )</td>
            <td>@Html.DisplayFor(modelItem => item.apPat)</td>
            <td>@Html.DisplayFor(modelItem => item.apMat)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.ID }) |
                @Html.ActionLink("Borrar", "Delete", new { id=item.ID })
            </td>
        </tr>
    }
    </tbody>
</table>