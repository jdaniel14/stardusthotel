@model IEnumerable<Stardust.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Crear usuario", "Create")*@
    Añadir <a href="@Url.Action("Create")"><img src="../../Content/images/icons/color/plus.png", alt="Edit" /></a>
</p>
<table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable">
    <thead>
        <tr>
            <td>Nombre</td>
            <td>Ap. Paterno</td>
            <td>Ap. Materno</td>
            <td></td>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombres )</td>
            <td>@Html.DisplayFor(modelItem => item.apPat)</td>
            <td>@Html.DisplayFor(modelItem => item.apMat)</td>
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.ID }) |
                @Html.ActionLink("Borrar", "Delete", new { id=item.ID })*@
                Editar <a href="@Url.Action("Edit", new { id = item.ID })"><img src="../../Content/images/icons/color/pencil.png", alt="Edit" /></a> | 
                Detalles <a href="@Url.Action("Details", new { id = item.ID })"><img src="../../Content/images/icons/color/edit-column.png", alt="Details" /></a> | 
                Borrar <a href="@Url.Action("Delete", new { id = item.ID })"><img src="../../Content/images/icons/color/cross.png", alt="Delete" /></a>
            </td>
        </tr>
        
    }
    </tbody>
</table>