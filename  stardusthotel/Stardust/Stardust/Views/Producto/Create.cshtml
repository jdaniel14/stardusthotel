@model Stardust.Models.ProductoBean

<h2>Registrar Producto</h2>


@using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
            <div class="widget">
            <div class="title">
                <h6>Registrar Producto</h6>
            </div>


            <div class="formRow">
                @Html.LabelFor(model => model.nombre)
                <div class = "formRight" >@Html.TextBoxFor(model => model.nombre, new{ placeholder = "Maximo 50 caracteres aqui"})
                @Html.ValidationMessageFor(model => model.nombre)</div>

                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion)
                <div class = "formRight" >@Html.TextAreaFor(model => model.descripcion)</div>
                 <div class = "clear" ></div>
            </div>
            
           
            </div>
    </fieldset>
            <p></p> <p></p> <p></p>
    <div>
           <input type="submit" value="Crear" class = "redB" />
           @Html.ActionLink("Regresar", "Buscar")
    </div>
}