@model Stardust.Models.Producto

@{
    ViewBag.Title = "Registrar Producto";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Registrar Producto</legend>

            <div class="formRow">
                @Html.LabelFor(model => model.nombre)
                <div class = "formRight" >@Html.EditorFor(model => model.nombre)</div>
                @Html.ValidationMessageFor(model => model.nombre)
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion)
                <div class = "formRight" >@Html.EditorFor(model => model.descripcion )</div>
                @Html.ValidationMessageFor(model => model.descripcion)
                <div class = "clear" ></div>
            </div>

        <p>
            <input type="submit" value="Registrar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
