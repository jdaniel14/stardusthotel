@model Stardust.Models.ProductoBean

<h2>Modificar Producto</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm( "Edit" , "Producto" , FormMethod.Post , new { @class = "form" } ) ){
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Modificar Producto</h6></div>

            <div class="formRow">
                @Html.LabelFor(model => model.nombre)
                <div class = "formRight" >@Html.EditorFor(model => model.nombre)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion)
                <div class = "formRight" >@Html.TextAreaFor(model => model.descripcion)</div>
                <div class = "clear" ></div>
            </div>
            
        </div>
    </fieldset>
    <p>
        <input type="submit" value="Guardar" class = "redB" />
    </p>
}

<div>
    @Html.ActionLink("Regresar", "../Home/Index")
</div>
