@model Stardust.Models.ProductoXAlmacenBean

@{
    ViewBag.Title = "Listado";
}

<h2>Productos</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>



 @using (Html.BeginForm("ModificarProductosAlmacen", "Producto", FormMethod.Post, new { @class = "form" }))
{   
<p>
    <a href="@Url.Action("AsignarProductosaAlmacen", new { idhotel = Model.idhotel })"><img src="../../Content/images/icons/color/plus.png", alt="Create" />Añadir mas Productos</a>
</p>

     @Html.HiddenFor(model => model.idalmacen) 
      @Html.HiddenFor(model => model.idhotel) 
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Hotel</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.Hotel)
                <div class=" formRight">  @Html.TextBoxFor(model => model.Hotel, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
            
        </div>
    </fieldset>
    

    <p></p><p></p><p></p><p></p>

    <div class="title"><h6>Productos que tiene el Hotel</h6> </div>
     <p></p><p></p>
    
        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
            <td>Producto</td>
            <td>Stock Mínimo</td>
            <td>Stock Actual</td>
            <td>Stock Máximo</td>
        </tr>
    </thead>

    <tbody>

  
    @for (int i = 0; (i < Model.listProdalmacen.Count); i++)
    {
    @Html.HiddenFor(model => model.listProdalmacen[i].ID) 
             <tr>       
               
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].stockminimo, new { @readonly = "readonly" })</td>
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].stockactual, new { @readonly = "readonly" })</td>
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].stockmaximo, new { @readonly = "readonly" })</td>
               @* <td> @Html.TextBoxFor(model => model.listProdProv[i].cantMaxima, new { @readonly = "readonly" })   </td>*@
     </tr>

    
    }
           
    </tbody>

    </table>
    <p></p><p></p><p></p><p></p>
    <p>
        <input type="submit" value="Modificar" class = "redB" />
        @Html.ActionLink("Regresar", "ListadeHoteles", "Producto")
    </p>
    }
