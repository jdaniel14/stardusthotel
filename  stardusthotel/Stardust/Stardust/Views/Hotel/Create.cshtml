@model Stardust.Models.HotelBean

@{
    ViewBag.Title = "Registrar hotel";
}

<h2>Registrar Nuevo Local</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Hotel", FormMethod.Post, new { @class = "form" } ))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Crear Hotel</h6></div>

            <div class="formRow">
                @Html.LabelFor(model => model.nombre)
                <div class = "formRight" >@Html.TextBoxFor(model => model.nombre)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.razonSocial)
                <div class = "formRight" >@Html.TextBoxFor(model => model.razonSocial)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.direccion)
                <div class = "formRight" >@Html.TextBoxFor(model => model.direccion)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.tlf1)
                <div class = "formRight" >@Html.TextBoxFor(model => model.tlf1)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.tlf2)
                <div class = "formRight" >@Html.TextBoxFor(model => model.tlf2)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.email)
                <div class = "formRight" >@Html.TextBoxFor(model => model.email)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.nroPisos)
                <div class = "formRight" >@Html.TextBoxFor(model => model.nroPisos)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.departamento)
                <div class = "formRight" >@Html.TextBoxFor(model => model.departamento)</div>
                <div class = "clear" >
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.provincia)
                <div class = "formRight" >@Html.TextBoxFor(model => model.provincia)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.distrito)
                <div class = "formRight" >@Html.TextBoxFor(model => model.distrito)</div>
                <div class = "clear" ></div>
            </div>
        </div>
    </fieldset>
    <p>
        <input type="submit" value="Crear" class = "redB" />
    </p>
    
     
    
   
}