@model Stardust.Models.HotelViewModelCreate

@{
    ViewBag.Title = "Registrar hotel";
}


<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Ubigeo.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var cmbDepartamento = $('#idDepartamento');
        cmbDepartamento.val('');
    });
</script>
@Html.ValidationSummary(true)

@*@using (Html.BeginForm("Create", "Hotel", FormMethod.Post, new { @class = "form", id = "validate"}))*@
@using (Html.BeginForm("Create", "Hotel", FormMethod.Post, new { @class = "form"}))
{
    
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>@ViewBag.Title</h6></div>

            <div class="formRow">
                @Html.LabelFor(model => model.nombre)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nombre, new { placeholder = "Maximo 30 caracteres aqui, evite usar caracteres extraños" })
                    @Html.ValidationMessageFor(model => model.nombre)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.razonSocial)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.razonSocial, new { placeholder = "Evite usar caracteres extraños" })
                    @Html.ValidationMessageFor(model => model.razonSocial)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.direccion)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.direccion)
                    @Html.ValidationMessageFor(model => model.direccion)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.tlf1)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.tlf1, new { placeholder = "Ejm: 015055050" })
                    @Html.ValidationMessageFor(model => model.tlf1)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.tlf2)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.tlf2, new { placeholder = "Ejm: 015055050" })
                    @Html.ValidationMessageFor(model => model.tlf2)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.email)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.email, new { placeholder = "Ejm: stardust@stardust.pe" })
                    @Html.ValidationMessageFor(model => model.email)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.nroPisos)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nroPisos, new { placeholder = "No más de 3 dígitos aquí" })
                    @Html.ValidationMessageFor(model => model.nroPisos)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.idDepartamento)
                <div class = "formRight" > 
                    @Html.DropDownListFor(model => model.idDepartamento, new SelectList(Model.Departamentos, "ID", "nombre"), "Elije un departamento...") 
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ValidationMessageFor(model => model.idDepartamento)
                </div>
                <div class = "clear" ></div>
            </div>

            <div>
                @for (int i = 0; i < Model.Departamentos.Count; i++)
                {
                    @Html.HiddenFor(m => m.Departamentos[i].ID)
                    @Html.HiddenFor(m => m.Departamentos[i].nombre)
                }
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.idProvincia)
                <div class = "formRight" > 
                    @Html.DropDownListFor(model => model.idProvincia, Enumerable.Empty<SelectListItem>(), "Elije un departamento primero...") 
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ValidationMessageFor(model => model.idProvincia)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.idDistrito)
                <div class = "formRight" > 
                    @Html.DropDownListFor(model => model.idDistrito, Enumerable.Empty<SelectListItem>(), "Elije un departamento primero...") 
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ValidationMessageFor(model => model.idDistrito)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.Almacen.descripcion)
                <div class = "formRight" > 
                    @Html.TextAreaFor(model => model.Almacen.descripcion) 
                    @Html.ValidationMessageFor(model => model.Almacen.descripcion)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.Almacen.cantidad)
                <div class = "formRight" > 
                    @Html.TextBoxFor(model => model.Almacen.cantidad) 
                    @Html.ValidationMessageFor(model => model.Almacen.cantidad)
                </div>
                <div class = "clear" ></div>
            </div>


        </div>
    </fieldset>
    <p>
        <input type="submit" value="Crear" class = "redB" />
    </p>
}

<div>
    @Html.ActionLink("Regresar", "List")
</div>