@model Stardust.Models.TipoHabitacionBean

@{
    ViewBag.Title = "Crear tipo de habitación";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "TipoHabitacion", FormMethod.Post, new { @class = "form", id = "validate" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Crear tipo de habitación</h6></div>

            <div class="formRow">
                @Html.LabelFor(model => model.nombre )<span class="req">*</span>
                <div class = "formRight" >@Html.TextBoxFor(model => model.nombre, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "30", placeholder = "Maximo 30 caracteres aqui" })</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion )
                <div class = "formRight" >@Html.TextAreaFor(model => model.descripcion )</div>
                
                <div class = "clear" ></div>
            </div>

        </div>
    </fieldset>
    <p>
        <input type="submit" value="Crear" class = "redB" />
    </p>
}


<div>
    @Html.ActionLink("Regresar", "List")
</div>
