@model Stardust.Models.TipoHabitacionBean

@{
    ViewBag.Title = "Detalles del tipo de habitación";
}

<h2>Detalle</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Details", "TipoHabitacion", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Detalles del tipo de habitación</h6></div>

            <div class="formRow">
                @Html.LabelFor(model => model.nombre)
                <div class = "formRight" >@Html.DisplayFor(model => model.nombre)</div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion)
                <div class = "formRight" >@Html.DisplayFor(model => model.descripcion)</div>
                <div class = "clear" ></div>
            </div>

        </div>
    </fieldset>
    <p>
        <a href="@Url.Action("Edit", new { id = Model.ID })"><img src="../../Content/images/icons/color/pencil.png", alt="Edit" />Editar</a> | 
        @Html.ActionLink("Regresar", "List")
    </p>
}
