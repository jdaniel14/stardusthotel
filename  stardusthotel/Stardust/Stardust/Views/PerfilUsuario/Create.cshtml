@model Stardust.Models.PerfilUsuarioBean

@{
    ViewBag.Title = "Crear Perfil de Usuario";
}

<h2>Crear perfil de usuario</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm("Create", "PerfilUsuario", FormMethod.Post, new { @class = "form" } ))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <div class = "widget" >
            <div class = "title" ><h6> Crear Perfil Usuario </h6></div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.nombre )
                <div class = "formRight" > @Html.TextBoxFor( model => model.nombre ) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.descripcion )
                <div class = "formRight" > @Html.TextBoxFor( model => model.descripcion ) </div>
                <div class = "clear" ></div>
            </div>
        </div>
        <p>
            <input class = "redB" type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>