@model Stardust.Models.ServiciosBean

@{
    ViewBag.Title = "Detalle del Servicio";
}

<h2>Servicio</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    
@using (Html.BeginForm("DetallesServicio", "Servicios", FormMethod.Post, new { @class = "form" }))
{
   @Html.ValidationSummary(false)
    
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Detalle del Servicio</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombre)<span class="req">*</span>
                <div class=" formRight"> @Html.DisplayFor(model => model.nombre)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.descripcion)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.descripcion) </div>
                <div class="clear"></div>
            </div>

            </div>
            <div class="formRow">@Html.LabelFor(model => model.estado2)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.estado2) </div>
                <div class="clear"></div>
            </div>
            
        </div>
    </fieldset>
        <p>
        <a href="@Url.Action("ModificarServicio", new { id = Model.id })"><img src="../../Content/images/icons/color/pencil.png", alt="Edit" />Editar</a> | 
        @Html.ActionLink("Regresar", "BuscarServicio")
    </p>
    
}