                &nbsp;
                No
                @Html.RadioButtonFor(model => model.proyector, 0)

                </div>
                <div class="clear"></div>
            </div>*@
            
                      
        </div>
    </fieldset>

    <p>
                <input type="submit" value="Crear" class = "redB" />
            </p>


}

