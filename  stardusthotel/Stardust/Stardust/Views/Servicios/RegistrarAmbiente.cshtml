@model Stardust.Models.AmbienteBean

@{
    ViewBag.Title = "Registrar Ambiente";
}

<h2>Registro de un nuevo Ambiente</h2>


<p>
    Llene el siguiente formulario para la creación de un nuevo ambiente
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())

{

    <form action = "" class = "form" >
        <fieldset>

            
            <div class="editor-label">
                <label>Nombre</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.nombre)                              
            </div>

            <div class="editor-label">
                <label>Descripcion</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.descripcion)                              
            </div>

            <div class="editor-label">
                <label>Capacidad máxima</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.cap_maxima)                              
            </div>

            <div class="editor-label">
                <label>Largo</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.largo)                              
            </div>

            <div class="editor-label">
                <label>Ancho</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ancho)                              
            </div>

            <div class="editor-label">
                <label>Precio por hora</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.precioXhora)                              
            </div>

            <div class="editor-label">
                <label>Largo del escenario</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.largo_escenario)                              
            </div>

            <div class="editor-label">
                <label>Ancho del escenario</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ancho_escenario)                              
            </div>

            <div class="editor-label">
                <label>Proyector</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.proyector)                              
            </div>
            
            <p>
                <input type="submit" value="Registrar Ambiente" />
            </p>

        </fieldset>
    </form>


}

