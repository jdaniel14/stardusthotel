<h2>Registro de un nuevo Ambiente</h2>


<p>
    Llene el siguiente formulario para la creación de un nuevo ambiente
</p>


@ViewBag.lol
@using (Html.BeginForm("RegistrarAmbiente", "Servicios", FormMethod.Post, new { @class = "form", id = "validate" }))
{
 
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Registrar Ambiente</h6>
            </div>

             <div class = "formRow" >
                @Html.LabelFor(model => model.idHotel)
                <div class = "formRight" > 
                    @Html.DropDownListFor(model => model.idHotel, new SelectList(ViewBag.listaHoteles, "ID", "nombre"), "..Elija un Hotel", new { onchange = "this.form.submit();" })
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ValidationMessageFor(model => model.idHotel)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.nombre)
                <div class="formRight">
                @Html.TextBoxFor(m => m.nombre, new { @class = "validate[required]", name = "", maxlength = "50", minlength = "3", placeholder = "Nombre de máximo 50 caracteres" }) 
                @Html.ValidationMessageFor(model => model.nombre)
                </div>
                <div class="clear"></div>
            </div>


            <div class="formRow">@Html.LabelFor(model => model.descripcion)
                <div class="formRight">
                @Html.TextAreaFor(m => m.descripcion, new { maxlength = "200", placeholder = "Maximo 200 caracteres aqui" }) 
                @Html.ValidationMessageFor(model => model.descripcion)
                </div>
                <div class="clear"></div>
            </div>

           <div class="formRow"><span>@Html.LabelFor(model => model.cap_maxima)
                <div class="formRight">
                @Html.TextBoxFor(m => m.cap_maxima, new { maxlength = "6" }) 
                @Html.ValidationMessageFor(model => model.cap_maxima)
                </div>
                <div class="clear"></div>
            </div>
           
           <div class="formRow">@Html.LabelFor(model => model.largo)
                <div class="formRight">
                @Html.TextBoxFor(m => m.largo, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "9", minlength = "1" }) 
                @Html.ValidationMessageFor(model => model.largo)
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.ancho)
                <div class="formRight">
                @Html.TextBoxFor(m => m.ancho, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "9", minlength = "1" }) 
                @Html.ValidationMessageFor(model => model.ancho)
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.precioXhora)
                <div class="formRight">
                @Html.TextBoxFor(m => m.precioXhora, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "9" }) 
                @Html.ValidationMessageFor(model => model.precioXhora)
                </div>
                <div class="clear"></div>
            </div>

           <div class="formRow">@Html.LabelFor(model => model.piso)
                <div class="formRight">
                @Html.TextBoxFor(m => m.piso, new { maxlength = "2" }) 
                @Html.ValidationMessageFor(model => model.piso)
                </div>
                <div class="clear"></div>
            </div>

           @* <div class="formRow"><span>Proyector</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.proyector) 
                </div>
                <div class="clear"></div>
            </div>*@
                        
