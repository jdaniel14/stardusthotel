@model Stardust.Models.ServiciosBean


@{
    ViewBag.Title = "RegistrarServicio";
}

<h2>RegistrarServicio</h2>


<p>
    Llene el siguiente formulario para la creación de un nuevo servicio
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())

{

    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Registrar Servicio</h6>
            </div>


            <div class="formRow"><span>Nombre</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.nombre) 
                </div>
                <div class="clear"></div>
            </div>

            
           <div class="formRow"><span>Descripcion</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.descripcion) 
                </div>
                <div class="clear"></div>
            </div>

    </div>
    </fieldset>

    <p>
                <input type="submit" value="Crear" class = "redB" />
            </p>



}

