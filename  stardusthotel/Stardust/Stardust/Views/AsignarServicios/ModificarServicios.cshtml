@model Stardust.Models.ServicioXHotelBean

@{
    ViewBag.Title ="Modifica Servicio";
}

<h2>Modificar Servicios</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>



 @using (Html.BeginForm("Guardarservicios2", "AsignarServicios", FormMethod.Post, new { @class = "form", id = "validate" }))
{   
    @Html.HiddenFor(model => model.idhotel)
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.hotel)
                <div class=" formRight">  @Html.TextBoxFor(model => model.hotel, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
            
        </div>
    </fieldset>
    

    <p></p><p></p><p></p><p></p>

        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
          <td>Servicio</td>
           <td>Precio (S/.)</td>
         
        </tr>
    </thead>

    <tbody>

  
    @for (int i = 0; (i < Model.listServHot.Count); i++)
    {
            @Html.HiddenFor(model => model.listServHot[i].id) 
             <tr>  
                <td> @Html.TextBoxFor(model => model.listServHot[i].nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listServHot[i].precio, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", placeholder = "0.00" })         </td>
              
     </tr>

    }
           
    </tbody>

    </table>
    <p></p><p></p><p></p><p></p>
    <p>
        <input type="submit" value="Guardar" class = "redB" />
         @Html.ActionLink("Regresar", "ListarServicios/" + Model.idhotel, "AsignarServicios");
    </p>
    }

