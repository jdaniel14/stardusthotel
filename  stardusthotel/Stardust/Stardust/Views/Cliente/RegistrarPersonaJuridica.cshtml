@model Stardust.Models.ClienteBean

@{
    ViewBag.Title = "Registrar Persona Juridica";
}

<h2>Registrar Persona Juridica</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

<p>
    Llene el siguiente formulario para la creación de un nuevo Cliente Juridica
</p>

@using (Html.BeginForm("RegistrarPersonaJuridica", "Cliente", FormMethod.Post, new { @class = "form", id = "validate" }))

{

    <fieldset>
        <div class="widget">

            <div class="title">
                <h6>Registrar Persona Juridica</h6>
            </div>

            <div class="formRow"><span>Razon Social</span>                
               <div class = "formRight" > 
               @Html.TextBoxFor(m => m.razonSocial, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "30", placeholder = "Maximo 30 caracteres aqui" })
               </div>                
               <div class="clear"></div>
            </div>
                        
            <div class="formRow"><span>RUC</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.nroDocumento, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "11", minlength = "1" }) 
                </div>
                <div class="clear"></div>
            </div>

        </div>
    </fieldset>

    <p>
        <input type="submit" value="Crear" class = "redB" />
    </p>
}