            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.idPerfilUsuario)
                <div class = "formRight" >
                    @Html.DropDownListFor(model => model.idPerfilUsuario, new SelectList(Model.PerfilesUsuario, "ID", "nombre", Model.idPerfilUsuario), "Elije un perfil...")
                    @Html.ValidationMessageFor(model => model.idPerfilUsuario)
                </div>
                <div class = "clear" ></div>
            </div>

            @*<div class = "formRow" >
