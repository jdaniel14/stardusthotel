@model Stardust.Models.VariablesBean

@{
    ViewBag.Title = "Variables del sistema";
}

<fieldset>
    <div class = "widget" >
        <div class = "title"><h6>@ViewBag.Title</h6></div>

        <div class="formRow">
            @Html.LabelFor(model => model.horasEsperaConfirmarReserva)
            <div class = "formRight" >@Html.DisplayFor(model => model.horasEsperaConfirmarReserva)</div>
            <div class = "clear" ></div>
        </div>

        <div class="formRow">
            @Html.LabelFor(model => model.porcAdelanto)
            <div class = "formRight" >@Html.DisplayFor(model => model.porcAdelanto)%</div>
            <div class = "clear" ></div>
        </div>

        <div class="formRow">
            @Html.LabelFor(model => model.diasEsperarSinRetener)
            <div class = "formRight" >@Html.DisplayFor(model => model.diasEsperarSinRetener)</div>
            <div class = "clear" ></div>
        </div>

        <div class="formRow">
            @Html.LabelFor(model => model.porcRetencion)
            <div class = "formRight" >@Html.DisplayFor(model => model.porcRetencion)%</div>
            <div class = "clear" ></div>
        </div>
    </div>
</fieldset>

<p>
    <a href="@Url.Action("Edit")"><img src="@Url.Content("~/Content/images/icons/color/pencil.png")", alt="Edit" />Editar</a> | 
    <a href="@Url.Action("Index", "Home")">Regresar</a>
</p>

@using (Html.BeginForm("UploadLogo", "Variables", FormMethod.Post, new { @class = "form", enctype= "multipart/form-data" }))
{ 
    <fieldset>
    <div class = "widget" >
        <div class = "title"><h6>Logo</h6></div>

        <div class="formRow">
            <label>Logo de la cadena</label>
            <div class = "formRight" ><input type = "file" name = "img" /></div>
            <div class = "clear" ></div>
        </div>
    </div>

    <p>
        <input class = "redB" type="submit" value="Guardar" />
    </p>
</fieldset>
}