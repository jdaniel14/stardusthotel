@model Stardust.Models.OrdenCompraBean

<h2>Registrar Orden de Compra</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm("Registrar", "OrdenCompra", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
            <div class="widget">
            <div class="title">
                <h6>Seleccionar Proveedor</h6>
            </div>
            @Html.HiddenFor(model => model.idhotel)
            <div class="formRow">
               @Html.LabelFor(model => model.idProv)                              
                
                <div class = "formRight" >
                <div class = "selector">@Html.DropDownListFor(model => model.idProv, Model.proveedorList)</div></div>
                <div class = "clear" ></div>
            </div>

            </div>
            
    </fieldset>
            <p></p> <p></p> <p></p>
    <div>
           <input type="submit" value="Seleccionar" class = "redB" /> |
           @Html.ActionLink("Regresar", "Index")
    </div>
}