               @Html.LabelFor(model => model.idProv)                              
                <div class = "formRight" >@Html.DropDownListFor(model => model.idProv, Model.proveedorList)</div>
                <div class = "clear" ></div>
            </div>

            </div>
            
    </fieldset>
            <p></p> <p></p> <p></p>
    <div>
           <input type="submit" value="Buscar" class = "redB" /> |
           @Html.ActionLink("Regresar", "Index")
    </div>
}