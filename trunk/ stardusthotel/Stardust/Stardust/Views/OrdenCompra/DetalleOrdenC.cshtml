@model Stardust.Models.OrdenCompraBean

@{
    ViewBag.Title = "Detalle del Orden Compra";
}

<h2>Proveedor</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

    
@using (Html.BeginForm("DetalleOrdenC", "OrdenCompra", FormMethod.Post, new { @class = "form" }))
{
   @Html.ValidationSummary(false)
    
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Detalle de La Orden Compra</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombreproveedor)<span class="req">*</span>
                <div class=" formRight"> @Html.DisplayFor(model => model.nombreproveedor)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.fecha)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.fecha) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.estado)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.estado) </div>
                <div class="clear"></div>
            </div>
          
            
        </div>
    </fieldset>
    
    <div class="wrapper">
    <div class="widget">
      <div class="title">
      <h6>Detalle Orden de compra</h6>
      </div>
      <div class="dataTables_wrapper">
            
            <table cellpadding = "0" cellspacing = "0" width = "100%" class = "display dTable">
    <thead>
        <tr>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:150px;" >
                <div class="DataTables_sort_wrapper">
                Producto
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:150;" >
                <div class="DataTables_sort_wrapper">
                Cantidad
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
             <th class="ui-state-default" rowspan="1" colspan="1" style="width:180px;" >
                <div class="DataTables_sort_wrapper">
                Precio Unitario
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>

        </tr>
    </thead>

    <tbody>
    @for (int i = 0; i < Model.detalle.Count;i++ )
    {
      <tr>       
               
                <td> @Html.TextBoxFor(model => model.detalle[i].nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.detalle[i].Cantidad, new { @readonly = "readonly" })</td>
                <td> @Html.TextBoxFor(model => model.detalle[i].precio, new { @readonly = "readonly" })</td>
                
               @* <td> @Html.TextBoxFor(model => model.listProdProv[i].cantMaxima, new { @readonly = "readonly" })   </td>*@
     </tr>
  

    
        
    }
    </tbody>
    </table>
    </div>
        
    </div>
</div>
    
    <p>
        <a href="@Url.Action("ModificarOrdenC", new { id = Model.idOrdenCompra })"><img src="../../Content/images/icons/color/pencil.png", alt="Edit" />Editar</a> | 
        @Html.ActionLink("Regresar", "../Home/Index")
    </p>
    
}
       