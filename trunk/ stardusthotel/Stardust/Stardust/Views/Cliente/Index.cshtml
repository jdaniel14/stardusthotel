@model IEnumerable<Stardust.Models.ClienteBean>

@{
    ViewBag.Title = "Clientes Naturales";
}

<h2>Clientes Naturales</h2>

<p>
    Lista general de los Clientes Naturales del hotel
</p>

<p>
   @Html.ActionLink("Añadir persona natural", "RegistrarPersonaNatural","Cliente")<img src="../../Content/images/icons/color/plus.png" />
</p>

<div class = "widget" >

    <div class="title"><img src="../../Content/images/icons/dark/frames.png" alt="" class="titleIcon" /><h6>Servicios del hotel</h6></div>

    <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
            <td>Nombres</td>
            <td>Apellido Parterno</td>
            <td>Apellido Materno</td>
            <td>Nro. de documento</td>
            <td></td>            
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apPat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apMat)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.nroDocumento)
                </td>            
                <td>
                    @Html.ActionLink("Modificar", "ModificarClienteNatural", new { id = item.ID }) <img src="../../Content/images/icons/color/pencil.png" />|
                    @Html.ActionLink("Eliminar", "EliminarClienteNatural", new { id = item.ID }) <img src="../../Content/images/icons/color/cross.png" />                    
                </td>
            </tr>
    }
    
    </tbody>

    </table>
</div>
