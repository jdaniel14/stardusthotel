@model Stardust.Models.ClienteBean

@{
    ViewBag.Title = "Registrar Persona Natural";
}

<h2>Registrar Persona Natural</h2>

<p>
    Llene el siguiente formulario para la creación de un nuevo Cliente Natural
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

@using (Html.BeginForm("RegistrarClienteN", "Cliente", FormMethod.Post, new { @class = "form", id = "validate" }))
{

    <fieldset>
        <div class="widget">

            <div class="title">
                <h6>Registrar Persona Natural</h6>
            </div>

            <div class="formRow"><span>Nombre</span>                
               <div class = "formRight" > 
               @Html.TextBoxFor(m => m.nombres, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "30", placeholder = "Maximo 30 caracteres aqui" })
               </div>                
               <div class="clear"></div>
            </div>

            <div class="formRow"><span>Apellido Paterno</span>                
               <div class = "formRight" > 
               @Html.TextBoxFor(m => m.apPat, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "40", placeholder = "Maximo 40 caracteres aqui" })
               </div>                
               <div class="clear"></div>
            </div>

            <div class="formRow"><span>Apellido Materno</span>                
               <div class = "formRight" > 
               @Html.TextBoxFor(m => m.apMat, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "40", placeholder = "Maximo 40 caracteres aqui" })
               </div>                
               <div class="clear"></div>
            </div>
            
            <div class="formRow"><span>Nro. de documento</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.nroDocumento, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "8", minlength = "1" }) 
                </div>
                <div class="clear"></div>
            </div>

        </div>
    </fieldset>

    <p>
        <input type="submit" value="Crear" class = "redB" />
    </p>
}


