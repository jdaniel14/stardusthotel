@model Stardust.Models.ClienteBean

@{
    ViewBag.Title = "Modificar Cliente Natural";
}

<h2>Modificar Cliente Natural</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

@using (Html.BeginForm("ModificarClienteN", "Cliente", FormMethod.Post, new { @class = "form", id = "validate" }))
{
   
<form action = "" class = "form" >

   <fieldset>

        <legend>Cliente Natural</legend>
        @Html.HiddenFor(model => model.ID)
    
        <div class="formRow">
            <label>Nombres</label>
            <div class="formRight">
                @Html.TextBoxFor(m => m.nombres, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "30"})
            </div>
            <div class = "clear"></div>
        </div>
                
        <div class="formRow">
            <label>Apellido Paterno</label>
            <div class="formRight">
                 @Html.TextBoxFor(m => m.apPat, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "40" })
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Apellido Materno</label>
            <div class="formRight">
                @Html.TextBoxFor(m => m.apMat, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "40" })
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Nro. de Documento</label>
            <div class="formRight">
                @Html.TextBoxFor(m => m.nroDocumento, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid", maxlength = "8", minlength = "1" }) 
            </div>
            <div class = "clear"></div>
        </div>
    
        <p>
            <input type="submit" value="Guardar" class = "redB" />
        </p>

    </fieldset>

</form>
}
