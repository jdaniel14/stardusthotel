@model IEnumerable<Stardust.Models.ClienteBean>

@{
    ViewBag.Title = "Personas Juridicas";
}

<h2>Personas Juridicas</h2>

<p>
    Lista general de los Clientes Juridicos del hotel
</p>

<p>
   @Html.ActionLink("Añadir persona juridica", "RegistrarPersonaJuridica","Cliente")<img src="../../Content/images/icons/color/plus.png" />
</p>

<div class = "widget" >

    <div class="title"><img src="../../Content/images/icons/dark/frames.png" alt="" class="titleIcon" /><h6>Servicios del hotel</h6></div>

    <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
            <td>Razon Social</td>
            <td>RUC</td>            
            <td></td>            
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.razonSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nroDocumento)
                </td>                
                <td>
                    @Html.ActionLink("Modificar", "ModificarClienteJuridico", new { id = item.ID }) <img src="../../Content/images/icons/color/pencil.png" />|
                    @Html.ActionLink("Eliminar", "EliminarClienteJuridico", new { id = item.ID }) <img src="../../Content/images/icons/color/cross.png" />                    
                </td>
            </tr>
    }
    
    </tbody>

    </table>
</div>
