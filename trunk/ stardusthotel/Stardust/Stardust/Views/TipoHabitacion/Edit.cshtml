@model Stardust.Models.TipoHabitacionBean

@{
    ViewBag.Title = "Modificar tipo de habitación";
}

@if (!String.IsNullOrEmpty(ViewBag.results)) { 
    <div class="nNote nWarning hideit">
        <p><strong>AVISO: </strong>@ViewBag.results</p>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm( "Edit" , "TipoHabitacion" , FormMethod.Post , new { @class = "form", id = "validate" } ) ){
    @Html.ValidationSummary(true)
    <fieldset>
        <div class = "widget" >
            <div class = "title"><h6>Modificar tipo de habitación</h6></div>

            <div class="formRow">
                @Html.LabelFor(model => model.nombre)<span class="req">*</span>
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nombre, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid", maxlength = "30" })
                    @Html.ValidationMessageFor( model => model.nombre )
                </div>
                <div class = "clear" ></div>
            </div>

            <div class="formRow">
                @Html.LabelFor(model => model.descripcion )
                <div class = "formRight" >
                    @Html.TextAreaFor(model => model.descripcion )
                    @Html.ValidationMessageFor( model => model.descripcion )
                </div>
                <div class = "clear" ></div>
            </div>
            
        </div>
    </fieldset>
    <p>
        <input type="submit" value="Guardar" class = "redB" />
    </p>
}


<div>
    @Html.ActionLink("Regresar", "Index")
</div>