@model Stardust.Models.AmbienteBean

@{
    ViewBag.Title = "Registrar Ambiente";
}

<h2>Registro de un nuevo Ambiente</h2>


<p>
    Llene el siguiente formulario para la creación de un nuevo ambiente
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())

{

    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Registrar Ambiente</h6>
            </div>

            <div class="formRow"><span>Nombre</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.nombre) 
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow"><span>Descripcion</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.descripcion) 
                </div>
                <div class="clear"></div>
            </div>

           <div class="formRow"><span>Capacidad Maxima</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.cap_maxima) 
                </div>
                <div class="clear"></div>
            </div>
           
           <div class="formRow"><span>Largo</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.largo) 
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow"><span>Ancho</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.ancho) 
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow"><span>Precio por hora</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.precioXhora) 
                </div>
                <div class="clear"></div>
            </div>

           <div class="formRow"><span>Largo del escenario</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.largo_escenario) 
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow"><span>Ancho del escenario</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.ancho_escenario) 
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow"><span>Proyector</span>
                <div class="formRight">
                @Html.TextBoxFor(m => m.proyector) 
                </div>
                <div class="clear"></div>
            </div>
                       
           
        </div>
    </fieldset>

    <p>
                <input type="submit" value="Crear" class = "redB" />
            </p>


}

