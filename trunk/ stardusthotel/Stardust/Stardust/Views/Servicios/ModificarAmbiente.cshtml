@model Stardust.Models.AmbienteBean

@{
    ViewBag.Title = "Modificar Ambiente";
}

<h2>ModificarAmbiente</h2>

<p>
    Lista modificable de los ambientes del hotel
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
   
<form action = "" class = "form" >

   <fieldset>

        <legend>Ambiente</legend>
        @Html.HiddenFor(model => model.id)
    
        <div class="formRow">
            <label>Nombre</label>
            <div class="formRight">
                @Html.EditorFor(model => model.nombre)
            </div>
            <div class = "clear"></div>
        </div>
                
        <div class="formRow">
            <label>Descripcion</label>
            <div class="formRight">
                @Html.EditorFor(model => model.descripcion)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Capacidad Máxima</label>
            <div class="formRight">
                @Html.EditorFor(model => model.cap_maxima)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Largo</label>
            <div class="formRight">
                @Html.EditorFor(model => model.largo)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Ancho</label>
            <div class="formRight">
                @Html.EditorFor(model => model.ancho)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Precio por Hora</label>
            <div class="formRight">
                @Html.EditorFor(model => model.precioXhora)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Largo del escenario</label>
            <div class="formRight">
                @Html.EditorFor(model => model.largo_escenario)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Ancho del escenario</label>
            <div class="formRight">
                @Html.EditorFor(model => model.ancho_escenario)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Proyector</label>
            <div class="formRight">
                @Html.EditorFor(model => model.proyector)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
            <label>Piso</label>
            <div class="formRight">
                @Html.EditorFor(model => model.piso)
            </div>
            <div class = "clear"></div>
        </div>
    
        <p>
            <input type="submit" value="Guardar" class = "redB" />
        </p>

    </fieldset>

</form>
}