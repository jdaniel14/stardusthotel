@model Stardust.Models.AmbienteBean

@{
    ViewBag.Title = "Modificar Ambiente";
}


<h2>ModificarAmbiente</h2>

<p>
    Lista modificable de los ambientes del hotel
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.mousewheel.js")" type="text/javascript"></script>

@using (Html.BeginForm("ModificarAmbiente", "Servicios", FormMethod.Post, new { @class = "form", id = "validate" }))
{
   
<form action = "" class = "form" >

   <fieldset>

        <legend>Ambiente</legend>
        @Html.HiddenFor(model => model.id)

        <div class = "formRow" >
                @Html.LabelFor(model => model.idHotel )
                <div class = "formRight" > 
                    @Html.DropDownListFor(model => model.idHotel, new SelectList(ViewBag.listaHoteles, "ID", "nombre"), "..Elija un Hotel", new { onchange = "this.form.submit();" })
                    @Html.ValidationMessageFor(model => model.idHotel)
                </div>
                <div class = "clear" ></div>
            </div>
    
        <div class="formRow">
            @Html.LabelFor(model => model.nombre)
            <div class="formRight">
                @Html.TextBoxFor(model => model.nombre, new { maxlength = "50" })
                 @Html.ValidationMessageFor(model => model.nombre)

            </div>
            <div class = "clear"></div>
        </div>
                
        <div class="formRow">
            @Html.LabelFor(model => model.descripcion)
            <div class="formRight">
                @Html.TextAreaFor(model => model.descripcion, new { maxlength = "200" })
                @Html.ValidationMessageFor(model => model.descripcion)
            </div>
            <div class = "clear"></div>
        </div>

        <div class="formRow">
                @Html.LabelFor(model => model.cap_maxima)
                <div class="formRight">
                @Html.TextBoxFor(model => model.cap_maxima, new { maxlength = "6", minlength = "1" }) 
                @Html.ValidationMessageFor(model => model.cap_maxima)
                </div>
                <div class="clear"></div>
            </div>
           
           <div class="formRow">@Html.LabelFor(model => model.largo)
                <div class="formRight">
                @Html.TextBoxFor(model => model.largo, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "9", minlength = "1"}) 
                @Html.ValidationMessageFor(model => model.largo)
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.ancho)
                <div class="formRight">
                @Html.TextBoxFor(model => model.ancho, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "9", minlength = "1" }) 
                @Html.ValidationMessageFor(model => model.ancho)
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.precioXhora)
                <div class="formRight">
                @Html.TextBoxFor(model => model.precioXhora, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "9" }) 
                @Html.ValidationMessageFor(model => model.precioXhora)
                </div>
                <div class="clear"></div>
            </div>

             <div class="formRow">@Html.LabelFor(model => model.piso)
                <div class="formRight">
                @Html.TextBoxFor(model => model.piso, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "2"}) 
                @Html.ValidationMessageFor(model => model.piso)
                </div>
                <div class="clear"></div>
            </div>
            <div class = "formRow" >
                @Html.LabelFor(model => model.estado)
                <div class = "formRight" > 
                    @Html.TextBoxFor(model => model.estado)
                    @Html.ValidationMessageFor(model => model.estado)
                </div>
                <div class = "clear" ></div>
            </div>

           
      @*  <div class="formRow"><span>Estado</span>
                <div class="formRight">
                
                Activo
                @Html.RadioButtonFor(model => model.estado,1)      
                &nbsp;
                &nbsp;
                &nbsp;
                &nbsp;
                &nbsp;
                &nbsp;          
                NInactivo
                @Html.RadioButtonFor(model => model.estado,0)

                </div>
                <div class="clear"></div>
            </div>  *@    
    
        <p>
            <input type="submit" value="Guardar" class = "redB" />
        </p>

    </fieldset>

</form>
}