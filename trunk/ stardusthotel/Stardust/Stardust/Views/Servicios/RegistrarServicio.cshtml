@model Stardust.Models.ServiciosBean


@{
    ViewBag.Title = "RegistrarServicio";
}

<h2>RegistrarServicio</h2>


<p>
    Llene el siguiente formulario para la creación de un nuevo servicio
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>




@using (Html.BeginForm("RegistrarServicio", "Servicios", FormMethod.Post, new { @class = "form", id = "validate" }))

{

    <fieldset>
        <div class="widget">

            <div class="title">
                <h6>Registrar Servicio</h6>
            </div>

            <div class="formRow"><span>Nombre</span>
                
               <div class = "formRight" > 
               @Html.TextBoxFor(m => m.nombre, new { maxlength = "40", placeholder = "Maximo 40 caracteres aqui" })
               @Html.ValidationMessageFor(model => model.nombre)
               </div>
                
               <div class="clear"></div>
            </div>
            
            <div class="formRow"><span>Descripcion</span>
                <div class="formRight">
                @Html.TextAreaFor(m => m.descripcion, new { maxlength = "200", placeholder = "Maximo 200 caracteres aqui" }) 
                </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.estado2)
                <div class="formRight"> 
                                     @Html.RadioButtonFor(model => model.estado2, "Evento", true) Evento <br />
                                     @Html.RadioButtonFor(model => model.estado2, "Habitación", false) Habitación  <br />
                                     @Html.RadioButtonFor(model => model.estado2, "Otros", false) Otros
                                                                                                            
                </div> 
                <div class="clear"></div>
            </div>

        </div>
    </fieldset>

    <p>
        <input type="submit" value="Crear" class = "redB" />
    </p>
}

