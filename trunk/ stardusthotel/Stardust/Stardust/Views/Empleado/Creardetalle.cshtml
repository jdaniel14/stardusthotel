                <div class = "clear" ></div>
            </div>
            <div class = "formRow"  style= "display:none">
               
                @Html.LabelFor(model => model.nombreEmpleado)
                <div class = "formRight" > @Html.TextBoxFor(model => model.nombreEmpleado) </div>
                <div class = "clear" ></div>
            </div>
           
        </div>
        <p>
            <input class = "redB" type="submit" value="Crear" />
        </p>
    </fieldset>
}

