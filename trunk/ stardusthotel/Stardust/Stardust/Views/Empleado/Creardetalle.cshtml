@model Stardust.Models.HorarioDetalle

@{
    ViewBag.Title = "Crear Detalle";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>
    @Html.ValidationSummary(true)

@if ( !String.IsNullOrEmpty(ViewBag.error)) { 
    <div class="nNote nWarning hideit">
        <p><strong>AVISO: </strong>@ViewBag.error</p>
    </div>
}

@using (Html.BeginForm("Creardetalle", "Empleado", FormMethod.Post, new { @class = "form"}))
{
    <fieldset>
        <div class = "widget" >
            <div class = "title" ><h6>Crear  Detalle  </h6></div>

            @*<div class = "formRow" >
                @Html.LabelFor( model => model.nombreEmpleado )
                <div class = "formRight" > @Html.DropDownListFor( model => model.nombreEmpleado , new SelectList( ViewBag.empleados , "ID" , "nombres" ) , "Elija un usuario... " ) </div>
                <div class = "clear" ></div>
            </div>*@

            <div class = "formRow" >
                @Html.LabelFor(model => model.diaSemana)
                <div class = "formRight" > @Html.DropDownListFor(model => model.diaSemana, new SelectList(ViewBag.semana, "dia", "dia"), "Elija un dia... ") </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.horaEntrada)
                <div class = "formRight" > @Html.TextBoxFor(model => model.horaEntrada, new { @class = "timepicker"  }) </div>
                <div class = "clear" ></div>
            </div>
             <div class = "formRow" >
               
                @Html.LabelFor(model => model.horaSalida)
                <div class = "formRight" > @Html.TextBoxFor(model => model.horaSalida, new { @class = "timepicker" }) </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow"  style= "display:none" >
               
                @Html.LabelFor(model => model.idHorario)
