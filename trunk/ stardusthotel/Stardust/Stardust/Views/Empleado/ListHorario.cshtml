@model IEnumerable<Stardust.Models.Horario>

@{
    ViewBag.Title = "Horarios de empleado";
}

<h2>Horarios</h2>
<p></p><p></p>

<table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable">
    <thead>
        <tr>
            <td>Nombre Empleado</td>
            <td>Fecha Inicio</td>
            <td>Fecha Fin</td>
            <td>Opciones</td>
            <td>Horario Detalle</td>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model) {
        <tr> 
            <td>@Html.DisplayFor( modelItem => item.nombreEmpleado )</td>
            <td>@Html.DisplayFor(modelItem => item.fechaInicioHorario)</td>
            <td>@Html.DisplayFor(modelItem => item.fechaFinHorario)</td>

            <td> <a href="@Url.Action("EditarHorario", new { id = item.ID })"><img src="../../Content/images/icons/color/pencil.png", alt="Edit" />Editar </a></td>
            <td><a href="@Url.Action("HorarioDetalle", new { id = item.ID })"><img src="../../Content/images/icons/color/plus.png", alt="Create" />Horario Detalle</a></td>
        </tr>
    }
    </tbody>
</table>