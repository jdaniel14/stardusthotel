@model Stardust.Models.EventoBean
@{
    ViewBag.Title = "Detalles del Evento";
}

<h2>Evento</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.mousewheel.js")" type="text/javascript"></script>


    
@using (Html.BeginForm("DetallesEvento", "Evento", FormMethod.Post, new { @class = "form" }))
{
   @Html.ValidationSummary(false)
    
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Detalle del Evento</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombre)<span class="req">*</span>
                <div class=" formRight"> @Html.DisplayFor(model => model.nombre)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.descripcion)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.descripcion) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.fechaIni)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.fechaIni) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.horaIni)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.horaIni) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.fechaFin)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.fechaFin) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.horaFin)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.horaFin) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.nroParticipantes)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.nroParticipantes) </div>
                <div class="clear"></div>
            </div>
                        
        </div>
    </fieldset>
        <p>
        <a href="@Url.Action("ModificarEvento", new { id = Model.ID })"><img src="../../Content/images/icons/color/pencil.png", alt="Edit" />Editar</a> | 
        @Html.ActionLink("Regresar", "Buscar")
    </p>
    
}
       
