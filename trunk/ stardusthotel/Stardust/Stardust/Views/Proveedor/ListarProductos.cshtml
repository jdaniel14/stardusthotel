@model Stardust.Models.ProductoxProveedorBean

@{
    ViewBag.Title = "Listado";
}

<h2>Productos</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>



 @using (Html.BeginForm("ModificarProductos", "Proveedor", FormMethod.Post, new { @class = "form" }))
 {   
     @Html.HiddenFor(model => model.idproveedor) 
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.Proveedor)
                <div class=" formRight">  @Html.TextBoxFor(model => model.Proveedor, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
            
        </div>
    </fieldset>
    

    <p></p><p></p><p></p><p></p>

    <div class="title"><h6>Productos que tiene el Proveedor</h6> </div>
     <p></p>
        
     <p>
    <a href="@Url.Action("AsignarProductos", new { nombre = Model.Proveedor })"><img src="../../Content/images/icons/color/plus.png", alt="Create" />Añadir más Productos</a>
    </p>
        
          
     <div class="wrapper">
    <div class="widget">
      <div class="title">
      <h6>Lista de Productos</h6>
      </div>
      <div class="dataTables_wrapper">
            
            <table cellpadding = "0" cellspacing = "0" width = "100%" class = "display dTable">
    <thead>
        <tr>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:209px;" >
                <div class="DataTables_sort_wrapper">
                Nombre
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:209px;" >
                <div class="DataTables_sort_wrapper">
                Precio
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
        </tr>
    </thead>

    <tbody>

    @for (int i = 0; i < Model.listProdProv.Count; i++)
    {
         @Html.HiddenFor(model => model.listProdProv[i].ID) 
        <tr class="gradeA odd">
            <td class="sorting_1">@Html.DisplayFor(model => model.listProdProv[i].nombre)</td>
            <td>@Html.TextBoxFor(model => model.listProdProv[i].precio)</td>
             @*@Html.HiddenFor(model => model.listProdProv[i].precio) *@
             @Html.HiddenFor(model => model.listProdProv[i].nombre) 
        </tr>
    }
    </tbody>
    </table>
    </div>
        
    </div>
</div>
     
     
    <p></p><p></p><p></p><p></p>
    <p>
        @if (Model.listProdProv.Count > 0)
        {
            <input type="submit" value="Modificar" class = "redB" />
        }    
        
        @Html.ActionLink("Regresar", "Buscar", "Proveedor")
    </p>
 }
