@model IEnumerable<Stardust.Models.ProveedorBean>


@{
    ViewBag.Title = "Resultados de busqueda";
}

<h2>Mostrar Proveedores</h2>

<p>
    Lista general de los proveedores del hotel
</p>

<p>
    @Html.ActionLink("Registrar un nuevo Proveedor", "RegistrarProveedor","Proveedor")
</p>

<p>
    @Html.ActionLink("Buscar proveedor", "BuscarProveedor","Proveedor")
</p>


<div class = "widget" >

    <div class="title"><img src="../../Content/images/icons/dark/frames.png" alt="" class="titleIcon" /><h6>Proveedores</h6></div>

    <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>

            <td>Razon Social</td>

            <td>Direccion</td>
            <td>Telefono</td>

            <td>Contacto</td>

            <td></td>             
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model) {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.razonSocial)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.contacto)
                </td>

                <td>
                    @Html.ActionLink("Modificar", "ModificarProveedor", new { idProveedor = item.ID }) |
                    @Html.ActionLink("Eliminar", "EliminarProveedor", new { idProveedor = item.ID })                     
                </td>                
                
            </tr>
    }
    
    </tbody>

    </table>
</div>
