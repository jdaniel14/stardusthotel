@model Stardust.Models.ProductoxProveedorBean

@{
    ViewBag.Title = "Asignar Productos";
}

<h2>Asignar Productos</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    
  @using (Html.BeginForm("guardarproductosxProveedor", "Proveedor", FormMethod.Post, new { @class = "form" }))
  {
    @Html.HiddenFor(model => model.idproveedor) 
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.Proveedor)
                <div class=" formRight"> @Html.TextBoxFor(model => model.Proveedor, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
            
        </div>
    </fieldset>
    
    <p></p><p></p><p></p><p></p>
    
      
      
   <div class="wrapper">
    <div class="widget">
      <div class="title">
      <h6>Lista de Productos</h6>
      </div>
      <div class="dataTables_wrapper">
    <table cellpadding = "0" cellspacing = "0" width = "100%" class = "display dTable" >

    <thead>
       <tr>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:160px;">
                <div class="DataTables_sort_wrapper">
                Producto
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
             <th class="ui-state-default" rowspan="1" colspan="1" style="width:120px;" >
                <div class="DataTables_sort_wrapper">
                Precio
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
        </tr>
    </thead>

    <tbody>
    @for (int i = 0; i < Model.listProdProv.Count; i++)
    {

        if (!Model.listProdProv[i].estado2)
        {
         @Html.HiddenFor(model => model.listProdProv[i].ID, new { @readonly = "readonly" }) 
     <tr class="gradeA odd">       
                
                <td class="sorting_1"> @Html.TextBoxFor(model => model.listProdProv[i].nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listProdProv[i].precio2)  @Html.ValidationMessageFor(model => model.listProdProv[i].precio2)        </td>
                   
     </tr>
        }
        else
        {
            @Html.HiddenFor(model => model.listProdProv[i].nombre) 
            @Html.HiddenFor(model => model.listProdProv[i].precio2)         
            @Html.HiddenFor(model => model.listProdProv[i].cantMaxima)  
        }
    }

    
    </tbody>

    </table>
        </div>
        
    </div>
    </div>

    <p>
      <input type="submit" value="Aceptar" class = "redB" />

    </p>   
        
       @Html.ActionLink("Regresar", "ListarProductos/" + Model.idproveedor, "Proveedor");
  }

    

              
  