@model Stardust.Models.ProveedorBean

@{
    ViewBag.Title = "Index";
}

<h2>Proveedor</h2>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

   
@using (Html.BeginForm("ModificarProveedor", "Proveedor", FormMethod.Post, new { @class = "form", id = "validate" }))
{
   @Html.ValidationSummary(false)
    

    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Registrar Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.razonSocial)<span class="req">*</span>
                <div class="formRight">
                    @Html.TextBoxFor(model => model.razonSocial, new { @readonly = "readonly" })
                     
                </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.ruc)<span class="req">*</span>
                <div class="formRight"> @Html.TextBoxFor(model => model.ruc, new { @readonly = "readonly" }) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.direccion)<span class="req">*</span>
                <div class="formRight"> @Html.TextBoxFor(model => model.direccion) 
                 @Html.ValidationMessageFor(model => model.direccion)</div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.telefono)
                 
                <div class="formRight"> @Html.TextBoxFor(model => model.telefono, new { maxlength = "9" }) 
                @Html.ValidationMessageFor(model => model.telefono)</div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.web)<span class="req">*</span>
                <div class="formRight"> @Html.TextBoxFor(model => model.web)
                </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.contacto)<span class="req">*</span>
                <div class="formRight"> @Html.TextBoxFor(model => model.contacto) 
                 @Html.ValidationMessageFor(model => model.contacto)</div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.cargoContacto)<span class="req">*</span>
                <div class="formRight"> @Html.TextBoxFor(model => model.cargoContacto)
                 @Html.ValidationMessageFor(model => model.cargoContacto) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.telefonocontacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.telefonocontacto, new { maxlength = "9" }) 
                 @Html.ValidationMessageFor(model => model.telefonocontacto)</div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.emailContacto)<span class="req">*</span>
                <div class="formRight"> @Html.TextBoxFor(model => model.emailContacto)</div>
                <div class="clear"></div>
            </div>
            
            <div class="formRow">@Html.LabelFor(model => model.observaciones)
                <div class="formRight"> @Html.TextAreaFor(model => model.observaciones, new { maxlength = "45" }) </div>
                <div class="clear"></div>
            </div>   
            
            <div class="formRow">@Html.LabelFor(model => model.estado2)
                <div class="formRight"> 
                                     @Html.RadioButtonFor(model => model.estado2, "Activo", true) Activo <br />
                                     @Html.RadioButtonFor(model => model.estado2, "Inactivo", false) Inactivo    
                                                                                                            
                </div> 
                <div class="clear"></div>
            </div>         
            
        </div>
    </fieldset>

        <p>
        <input type="submit" value="Guardar" class = "redB" />
        @Html.ActionLink("Regresar", "Buscar", "Proveedor")
    </p>
}
       