@model Stardust.Models.ProveedorBean

@{
    ViewBag.Title = "Index";
}

<h2>Proveedor</h2>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

@*@using (Html.BeginForm())
{
*@
    
@using (Html.BeginForm("ModificarProveedor", "Proveedor", FormMethod.Post, new { @class = "form", id = "validate" }))
{
   @Html.ValidationSummary(false)
    

    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Modificar Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.razonSocial)
                <div class=" formRight"> @Html.EditorFor(model => model.razonSocial, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.ruc)
                <div class="formRight"> @Html.DisplayFor(model => model.ruc, new { @class = "validate[required,custom[onlyNumberSp]]", name = "numsValid" }) </div>
                <div class="clear"></div>
            </div>

            <div class="formRow">@Html.LabelFor(model => model.direccion)
                <div class="formRight"> @Html.TextBoxFor(model => model.direccion, new { @class = "validate[required]", name = "", maxlength = "40", placeholder = "" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.telefono)
                <div class="formRight"> @Html.TextBoxFor(model => model.telefono, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "9", minlength = "8" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.web)
                <div class="formRight"> @Html.TextBoxFor(model => model.web, new { @class = "validate[required]", name = "urlField", maxlength = "30", placeholder = "" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.contacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.contacto, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.cargoContacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.cargoContacto, new { @class = "validate[required,custom[onlyLetterSp]]", name = "lettersValid" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.telefonocontacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.telefonocontacto, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", maxlength = "9", minlength = "8", placeholder = "celular" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.emailContacto)
                <div class="formRight"> @Html.TextBoxFor(model => model.emailContacto, new { @class = "validate[required,custom[email]]", name = "emailValid" }) </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.observaciones)
                <div class="formRight"> @Html.TextAreaFor(model => model.observaciones) </div>
                <div class="clear"></div>
            </div>            
            
        </div>
    </fieldset>

        <p>
        <input type="submit" value="Guardar" class = "redB" />
        @Html.ActionLink("Regresar", "DetallesProveedor/"+Model.ID,"Proveedor")
    </p>
}
       