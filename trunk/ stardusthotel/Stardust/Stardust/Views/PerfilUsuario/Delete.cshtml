@model Stardust.Models.PerfilUsuarioBean

@{
    ViewBag.Title = "Eliminar Perfil";
}

@if (!String.IsNullOrEmpty(ViewBag.results)) { 
    <div class="nNote nWarning hideit">
        <p><strong>AVISO: </strong>@ViewBag.results</p>
    </div>
}

<h2>Borrar perfil</h2>

<h3>Seguro de querer eliminar este perfil?</h3>

<fieldset>
    <div class = "widget" >
        <div class = "title"><h6>Detalles del perfil</h6></div>

        <div class="formRow">
            @Html.LabelFor(model => model.nombre)
            <div class = "formRight" >@Html.DisplayFor(model => model.nombre)</div>
            <div class = "clear" ></div>
        </div>

        <div class="formRow">
            @Html.LabelFor(model => model.descripcion)
            <div class = "formRight" >@Html.DisplayFor(model => model.descripcion)</div>
            <div class = "clear" ></div>
        </div>
    </div>
</fieldset>

@using (Html.BeginForm("Delete", "PerfilUsuario", FormMethod.Post, new { @class = "form" }))
{
    <p>
        <input class = "redB" type="submit" value = "Borrar" /> |
        @Html.ActionLink("Regresar", "List")
    </p>
}