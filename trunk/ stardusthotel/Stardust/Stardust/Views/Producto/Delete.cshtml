@model Stardust.Models.ProductoBean

@*<h2>Borrar Producto</h2>*@

<h3>Seguro de querer eliminar este producto?</h3>
<fieldset>
    <div class = "widget" >
        <div class = "title"><h6>Detalles del Producto</h6></div>
    @*<legend>Usuario</legend>*@

        <div class="formRow">
            @Html.LabelFor(model => model.nombre)
            <div class = "formRight" >@Html.DisplayFor(model => model.nombre)</div>
            <div class = "clear" ></div>
        </div>

        <div class="formRow">
            @Html.LabelFor(model => model.descripcion)
            <div class = "formRight" >@Html.DisplayFor(model => model.descripcion)</div>
