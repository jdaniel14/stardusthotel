@model Stardust.Models.ProductoXAlmacenBean

@{
    ViewBag.Title = "Asignar Productos";
}

<h2>Asignar Productos</h2>
<p></p><p></p><p></p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validationEngine.js")" type="text/javascript"></script>

    
  @using (Html.BeginForm("guardarproductosxAlmacen", "Producto", FormMethod.Post, new { @class = "form", id = "validate" }))
  {
    @Html.HiddenFor(model => model.idalmacen) 
      @Html.HiddenFor(model => model.idhotel) 
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Hotel</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.Hotel)
                <div class=" formRight"> @Html.TextBoxFor(model => model.Hotel, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
            
        </div>
    </fieldset>
    
    <p></p><p></p><p></p><p></p>

        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "sTable" >

    <thead>
        <tr>
           
            <td>Producto</td>
            <td>Stock Mínimo</td>
            <td>Stock Actual</td>
            <td>Stock Máximo</td>
        
        </tr>
    </thead>

    <tbody>
    @for (int i = 0; i < Model.listProdalmacen.Count; i++)
    {

        if (!Model.listProdalmacen[i].estado2)
        {
         @Html.HiddenFor(model => model.listProdalmacen[i].ID) 
         
     <tr>       
                
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].nombre, new { @readonly = "readonly" }) </td>
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].stockminimo, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", placeholder = "0" })         </td>
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].stockactual, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", placeholder = "0" })         </td>
                <td> @Html.TextBoxFor(model => model.listProdalmacen[i].stockmaximo, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", placeholder = "0" })         </td>   
     </tr>
        }
        else
        {
            @Html.HiddenFor(model => model.listProdalmacen[i].nombre) 
            @Html.HiddenFor(model => model.listProdalmacen[i].stockminimo)         
            @Html.HiddenFor(model => model.listProdalmacen[i].stockactual)  
            @Html.HiddenFor(model => model.listProdalmacen[i].stockmaximo)
        }
    }

    
    </tbody>

    </table>

    <p>
        <input type="submit" value="Aceptar" class = "redB" />
    </p>
      @Html.ActionLink("Regresar", "ListadeHoteles", "Producto")
  }

    

