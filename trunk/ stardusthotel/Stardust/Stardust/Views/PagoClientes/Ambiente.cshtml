<table cellpadding="3" cellspacing="3">
    <tr border="1" bgcolor="#777777" color="#ffffff">
        <td width="20%" align="center">
            Detalle
        </td>
        <td width="50%" align="center">
            Cantidad
        </td>
        <td width="30%" align="center">
            Total
        </td>
    </tr>
    @{
        var OddColor = "#DDEEEE";
        var evenColor = "#EEFFFF";
        var Odd = OddColor;
    }
    @foreach (EventoDetalle detalle in Model.listaDetalle)
    {
        <tr border="1" bgcolor="@Odd">
            <td>@detalle.detalle
            </td>
            <td>@detalle.cantidad
            </td>
            <td>@detalle.total
            </td>
        </tr>
        if (Odd == OddColor)
        {
            Odd = evenColor;
        }
        else
        {
            Odd = OddColor;
        }

    }

    <tr border="1" bgcolor="@Odd">
            <td>
            </td>
            <td>SubTotal
            </td>
            <td>@Model.subTotal
            </td>
        </tr>
        if (Odd == OddColor)
        {
            Odd = evenColor;
        }
        else
        {
            Odd = OddColor;
        }

    <tr border="1" bgcolor="@Odd">
            <td>
            </td>
            <td>IGV
            </td>
            <td>@Model.igv
            </td>
        </tr>
        if (Odd == OddColor)
        {
            Odd = evenColor;
        }
        else
        {
            Odd = OddColor;
        }
    <tr border="1" bgcolor="@Odd">
            <td>
            </td>
            <td>Total
            </td>
            <td>@Model.total
            </td>
        </tr>
        if (Odd == OddColor)
        {
            Odd = evenColor;
        }
        else
        {
            Odd = OddColor;
        }
</table>


