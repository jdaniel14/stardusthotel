@model Stardust.Models.TipoHabitacionXHotelViewModelDelete

@{
    ViewBag.Title = "Eliminar Tipo de Habitacion asignado al Hotel";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>@ViewBag.Title</h2>

<h3>Está seguro que desea eliminar el tipo de habitación asignado al hotel</h3>

@Html.ValidationSummary(true)

@using (@Html.BeginForm("DeleteTipoHabitacionXHotel", "Hotel", FormMethod.Post, new { @class = "form" }))
{ 
    <fieldset>
        <div class = "widget" >
            <div class = "title" >
                <img src="@Url.Content("~/Content/images/icons/dark/list.png")" alt class="titleIcon">
                <h6>@ViewBag.Title</h6>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.nombreHotel)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nombreHotel, new { @readonly="readonly"})
                    @Html.HiddenFor(model => model.idHotel)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.nombreTipoHabitacion)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nombreTipoHabitacion, new { @readonly = "readonly" })
                    @Html.HiddenFor(model => model.idTipoHabitacion)
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.precio)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.precio, new { @readonly = "readonly" })
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.nroPersonas)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nroPersonas, new { @readonly = "readonly" })
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor(model => model.nroTemporadasAsignadas)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.nroTemporadasAsignadas, new { @readonly = "readonly" })
                </div>
                <div class = "clear" ></div>
            </div>

        </div>
        <p>
            <input class = "redB" type="submit" value="Borrar" />
            @Html.ActionLink("Regresar", "ListTiposHabitacionXHotel", new { id = Model.idHotel })
        </p>
    </fieldset>
}